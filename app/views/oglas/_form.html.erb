<%= form_with(model: ogla) do |form| %>
  <% if ogla.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(ogla.errors.count, "error") %> prohibited this oglas from being saved:</h2>

      <ul>
        <% ogla.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="row mb-3">
    <%= form.label :naziv, class: "col-sm-2 col-md-1 col-form-label" %>
    <div class="col-sm-10 col-md-3">
      <%= form.text_field :naziv, class: "form-control" %>
  </div>
</div>

<div class="row mb-3">
    <%= form.label :opis, class: "col-sm-2 col-md-1 col-form-label" %>
    <div class="col-sm-10 col-md-4">
      <%= form.text_area :opis, class: "form-control" %>
  </div>
</div>
 

<div class="row mb-3">
    <%= form.label :poslodavac, class: "col-sm-2 col-md-1 col-form-label" %>
    <div class="col-sm-10 col-md-3">
      <%= form.text_field :poslodavac, class: "form-control" %>
  </div>
</div>
 

<div class="row mb-3">
    <%= form.label :email, class: "col-sm-2 col-md-1 col-form-label" %>
    <div class="col-sm-10 col-md-3">
      <%= form.text_field :email, class: "form-control" %>
  </div>
</div>
 

<div class="row mb-3">
    <%= form.label :kategorija, class: "col-sm-2 col-md-1 col-form-label" %>
    <div class="col-sm-10 col-md-2">
      <%= form.select :kategorija, ["Turizam", "Obrazovanje", "Poljoprivreda"], {selected: "Poljoprivreda"}, class: "form-select" %>
  </div>
</div>
 

<div class="row mb-3">
    <%= form.label :od, class: "col-sm-2 col-md-1 col-form-label" %>
    <div class="col-sm-10 col-md-2">
      <%= form.date_field :od, class: "form-control" %>
  </div>
</div>
 

<div class="row mb-3">
    <%= form.label :do, class: "col-sm-2 col-md-1 col-form-label" %>
    <div class="col-sm-10 col-md-2">
      <%= form.date_field :do, class: "form-control" %>
  </div>
</div>

  <div class="row">
    <div class="col col-md-1">
      <%= form.submit "Stvori", class: "btn btn-primary" %>
    </div>
     <div class="col col-md-1">
        <%= link_to 'Odustani', oglas_path, class: "btn btn-secondary text-light" %>
    </div>
  </div>  

<% end %>
