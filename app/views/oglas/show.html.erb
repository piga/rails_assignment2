<!-- fw znači font weight, a fs znači font size, 1 je h1 a 5 je h5  -->


  
<ul class="list-group list-group-flush">
  <li class="list-group-item"><h1 class="display-7 fw-bold"><%= @ogla.naziv %></h1></li>
  <li class="list-group-item">
    <p class="col-md-8 fs-5"><strong>Opis:</strong>
  <%= @ogla.opis %></p>
  </li>
  <li class="list-group-item">
    <p class="col-md-8 fs-5"><strong>Email:</strong>
  <%= @ogla.email %></p>
  </li>
  <li class="list-group-item">
    <p class="col-md-8 fs-5">
  <strong>Kategorija:</strong>
  <%= @ogla.kategorija %>
</p>
  </li>
  <li class="list-group-item">
  <p class="col-md-8 fs-5">
  <strong>Od:</strong>
  <%= @ogla.od %>
</p>

<p class="col-md-8 fs-5">
  <strong>Do:</strong>
  <%= @ogla.do %>
</p>
  </li>
  <li class="list-group-item">
    <% if current_user %>
      <%= link_to 'Edit', edit_ogla_path(@ogla), class: "fs-5" %> |
      <%= link_to 'Back', oglas_path, class: "fs-5" %>
    <% else %>
      <%= link_to 'Back', oglas_path, class: "fs-5" %>
    <% end %>
      
  </li>
  <li class="list-group-item">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
      Prijavi se na oglas
    </button>

    

    <%= render 'prijavas/form' %> 
  </li>
</ul>
  





   


   
  
